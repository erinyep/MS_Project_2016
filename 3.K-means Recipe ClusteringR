dataClusNB <- data.clean

dataClusNB <- dataClusNB[dataClusNB$cluster!=13,]
dataClusNB <- dataClusNB[dataClusNB$cluster!=8,]



cluster13 <- recluster13[,c(2,3,4,5)]
cluster13$cluster <- cluster13$cluster + 15

dataClusNB <- rbind(cluster13,dataClusNB)

#####leave out this cluster, did not re cluster well. We will be using it as a classification data set.
cluster8 <- recluster8[,c(2,3,4,5)]

save(cluster8, file='largeclusNB.Rda')
